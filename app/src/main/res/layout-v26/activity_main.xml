<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
>
        <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        android:orientation="vertical"


            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="3dp"
                    android:id="@+id/card1"
            >

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp" android:orientation="vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Our Team"
                            android:id="@+id/OurTeam"
                            android:textStyle="bold"
                            android:textSize="30dp"
                            android:textColor="@android:color/black"
                            android:layout_centerHorizontal="true"
                    />

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/hinhgach"
                            android:id="@+id/hinhgach"
                            android:layout_below="@+id/OurTeam"

                    />

            <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images"
                    android:layout_marginRight="40dp"
                    android:id="@+id/images"
                    android:layout_marginStart="40dp"
                    android:layout_below="@id/hinhgach"
            />

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Adams G"
                    android:layout_below="@id/images"
                    android:id="@+id/text"
                    android:layout_marginLeft="20dp"
            />

            <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/image1"
                    android:layout_below="@id/hinhgach"
                    />

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Betty L"
                    android:layout_below="@id/image1"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text1"
            />

            <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images2"
                    android:id="@+id/image2"
                    android:layout_marginLeft="290dp"
                    android:layout_below="@id/hinhgach"
            />

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Roberts"
                    android:layout_marginStart="280dp"
                    android:id="@+id/Roberts"
                    android:layout_below="@id/image2"
            />

            <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images3"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/images3"
                    android:layout_below="@id/text"
            />

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="  Miller W"
                    android:layout_below="@id/images3"
                    android:layout_marginStart="25dp"/>

            <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images4"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/text1"
                    android:id="@+id/images4"
            />

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Kevin John"
                    android:layout_below="@id/images4"
                    android:layout_centerHorizontal="true"


            />

            <ImageView
                    android:layout_width="30dp" android:layout_height="30dp"
                    android:src="@drawable/images5"
                    android:layout_below="@id/Roberts"
                    android:layout_marginLeft="290dp"
                    android:id="@+id/images5"
            />

            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Laura M"
                    android:layout_marginLeft="280dp"
                    android:layout_below="@id/images5"
            />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
        </ScrollView>


</LinearLayout>

